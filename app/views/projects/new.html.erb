<div class="container d-flex justify-content-center mt-5">
  <div class="row">
    <div class="col">
      <!-- ページのタイトル -->
      <h1 class="mb-4 text-center">Create a New Project</h1>

      <!-- プロジェクト作成フォーム -->
      <%= form_with model: @project, local: true, html: { class: 'form-horizontal' } do |form| %>
        <% if @project.errors.any? %>
          <!-- エラーメッセージの表示 -->
          <div class="alert alert-danger">
            <h2 class="h5"><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>
            <ul>
              <% @project.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- プロジェクトのタイトル入力フィールド -->
        <div class="form-group mb-3">
          <%= form.label :text, "タイトル", class: 'form-label' %>
          <%= form.text_field :text, class: 'form-control', placeholder: "プロジェクトのタイトルを入力" %>
        </div>

        <!-- プロジェクトの開始日入力フィールド -->
        <div class="form-group mb-3">
          <%= form.label :start_date, "開始日", class: 'form-label' %>
          <%= form.date_field :start_date, class: 'form-control' %>
        </div>

        <!-- プロジェクトの期間入力フィールド -->
        <div class="form-group mb-3">
          <%= form.label :duration, "期間", class: 'form-label' %>
          <%= form.number_field :duration, class: 'form-control', placeholder: "日数を入力" %>
        </div>

        <!-- プロジェクトの公開設定チェックボックス -->
        <div class="form-group mb-3">
          <%= form.label :public, "公開する", class: 'form-label' %>
          <%= form.check_box :public, class: 'form-check-input' %>
        </div>

        <!-- プロジェクト作成ボタン -->
        <div class="form-group mt-3">
          <%= form.submit "Create Project", class: 'btn btn-primary w-100' %>
        </div>
      <% end %>

      <!-- プロジェクト一覧ページへのリンク -->
      <div class="text-center mt-3">
        <%= link_to 'Back to Projects', projects_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
